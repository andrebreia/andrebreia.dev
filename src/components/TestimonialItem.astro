---
interface Props {
  quote: string
  author: string
  role: string
  company: string
}

const { quote, author, role, company } = Astro.props
---

<figure class="border-l-2 border-slate-200 pl-4 py-1">
  <blockquote>
    <p class="text-sm text-slate-700 leading-relaxed mb-2">
      &ldquo;{quote}&rdquo;
    </p>
  </blockquote>
  <figcaption class="text-xs text-slate-500">
    <span class="font-medium text-slate-700">{author}</span>, {role} at {company}
  </figcaption>
</figure>
