---
import { Icon } from 'astro-icon/components'

interface Props {
  icon: string
  title: string
  description: string
}

const { icon, title, description } = Astro.props
---

<div class="group flex items-start gap-4 p-3 -mx-3 rounded-xl">
  <div class="w-10 h-10 rounded-lg bg-slate-100 border border-slate-200 flex items-center justify-center text-slate-500 shrink-0">
    <Icon name={icon} class="size-5" aria-hidden="true" />
  </div>
  <div>
    <h3 class="text-slate-900 font-medium text-sm">{title}</h3>
    <p class="text-slate-600 text-sm mt-0.5 leading-relaxed">{description}</p>
  </div>
</div>
