---
interface Props {
  title: string
  excerpt: string
  href: string
}

const { title, excerpt, href } = Astro.props
---

<a href={href} class="group block p-4 rounded-xl border border-slate-100 bg-slate-50/50 hover:bg-slate-50 hover:border-slate-200 transition-all">
  <h3 class="text-slate-900 font-medium text-sm mb-2 group-hover:underline decoration-slate-300 underline-offset-4">
    {title}
  </h3>
  <p class="text-xs text-slate-600 leading-relaxed">{excerpt}</p>
</a>
