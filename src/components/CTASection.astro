---
import { Icon } from 'astro-icon/components'

interface Props {
  heading?: string
  description?: string
  emailHref?: string
  bookingUrl?: string
}

const {
  heading = "Let's work together",
  description = "Have a project in mind? I'm currently available for freelance work. Let's talk about what you need.",
  emailHref = 'mailto:contact@andrebreia.dev',
  bookingUrl,
} = Astro.props
---

<section class="bg-slate-50/50 -mx-4 px-4 py-8 rounded-2xl border border-slate-100 mt-14">
  <h2 class="text-slate-900 font-medium text-lg mb-2 font-heading">{heading}</h2>
  <p class="text-sm text-slate-600 leading-relaxed mb-6 max-w-md">{description}</p>
  <div class="flex flex-wrap gap-3">
    {bookingUrl && (
      <a
        href={bookingUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-slate-900 text-white text-sm font-medium rounded-xl px-5 py-2.5 hover:bg-slate-800 transition-colors"
      >
        <Icon name="lucide:calendar" class="size-4" aria-hidden="true" />
        Schedule a call
        <span class="sr-only">(opens in new tab)</span>
      </a>
    )}
    <a
      href={emailHref}
      class="inline-flex items-center gap-2 border border-slate-200 text-slate-700 text-sm font-medium rounded-xl px-5 py-2.5 hover:bg-slate-50 hover:border-slate-300 transition-colors"
    >
      <Icon name="lucide:mail" class="size-4" aria-hidden="true" />
      Send an email
    </a>
  </div>
</section>
